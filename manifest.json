{
  "manifest_version": 2,

  "name": "roGuard",
  "description": "hackout.ro",
  "version": "0.0.111",
  "icons": { "64": "/icon/icon-64.png",
			 "128": "/icon/icon-128.png"},
  "browser_action": {
    "default_icon": "/icon/icon-128.png",
    "default_popup": "popup.html"
  },
  
    "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["contentscript.js"]
   }
 ],
  
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage",
	"tabs",
	"alarms",
	"webNavigation"
  ]
}
